
public class Student {
	
	private String name;
	private int[] marks;


	public Student(String name, int[] marks) {
		this.name = name;
		this.marks = marks;
		
	}


	public int getNumberOfMarks() {
		return marks.length;
	}


	public int getTotalSumOfMarks() {
		int sum = 0;
		for(int mark :marks) {
			sum += mark;
		}
		return sum;
	}


	public int getMaximumMark() {
		int maximum = 0;
		for(int mark :marks) {
		if(mark>maximum){
			maximum = mark;
		}
	}
		return maximum;
}


	public int getminimumMark() {
		int minimum = 0;
		for(int mark :marks) {
			if(mark>minimum) {
				minimum=mark;
			}
			return minimum;
		}
		
		return 0;
	}

}
